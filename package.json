{
  "name": "examark",
  "version": "0.6.1",
  "description": "Create exams from Markdown and export to Canvas QTI format",
  "main": "dist/index.js",
  "bin": {
    "examark": "dist/index.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Data-Wise/examark.git"
  },
  "homepage": "https://data-wise.github.io/examark/",
  "bugs": {
    "url": "https://github.com/Data-Wise/examark/issues"
  },
  "author": "Data-Wise",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "canvas",
    "qti",
    "quiz",
    "exam",
    "lms",
    "education",
    "converter",
    "markdown",
    "quarto"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "prepublishOnly": "npm run build",
    "version": "bun scripts/sync-version.ts && git add -A",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "fast-xml-parser": "^5.3.2",
    "glob": "^13.0.0"
  }
}
